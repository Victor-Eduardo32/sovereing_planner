generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  sessions Session[]

  @@map("users")
}

model Session {
  id Int @id @default(autoincrement())
  user_id String 
  user User @relation(fields: [user_id], references: [id])
  token String
  created_at DateTime @default(now())
  ended_at DateTime?

  @@map("sessions")
  @@index([user_id])
}
